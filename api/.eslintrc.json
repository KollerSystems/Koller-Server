{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "newline-per-chained-call": ["off", { "ignoreChainWithDepth": 2 }],
        "no-magic-numbers": ["off", { "ignore": [1], "ignoreArrayIndexes": true, "ignoreDefaultValues": true, "enforceConst": true }],
        "camelcase": "off",
        "indent": [
            "error",
            2,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            { "avoidEscape": true }
        ],
        "semi": [
            "error",
            "always"
        ],
        "computed-property-spacing": "error",
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "key-spacing": "error",
        "arrow-spacing": "error",
        "comma-spacing": "error",
        "no-empty-function": "off",
        "no-floating-decimal": "error",
        "no-lone-blocks": "warn",
        "no-var": "error",
        "radix": "error",
        "comma-dangle": "error",
        "brace-style": [
            "error",
            "1tbs",
            { "allowSingleLine": true }
        ],
        "keyword-spacing": "error",
        "space-before-blocks": "error",
        "block-spacing": "error",
        "space-unary-ops": "error",
        "semi-style": "error",
        "semi-spacing": "error",
        "no-unused-vars": [
            "warn",
            "always",
            { "argsIgnorePattern": "^_" }
        ]
    }
}
